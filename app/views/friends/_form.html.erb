<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col">
      <%= form.label :First_name, style: "display: block" %>
      <%= form.text_field :First_name ,class:"form-control ", placeholder:"eg:BHAVANSING"  %>
    </div>
    <div class="col">
      <%= form.label :Last_name, style: "display: block" %>
      <%= form.text_field :Last_name ,class:"form-control", placeholder:"eg:CHAWAN"%>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :Email, style: "display: block" %>
    <%= form.text_field :Email ,class:"form-control" ,placeholder:"bhavanchawan@gmail.com"%>
  </div>

  <div class="field form-group">
    <%= form.label :Phone, style: "display: block" %>
    <%= form.text_field :Phone, class:"form-control", placeholder:"eg:97866xxxxx" %>
  </div>

  <div class="field form-group">
    <%= form.label :Twitter, style: "display: block" %>
    <%= form.text_field :Twitter, class:"form-control" ,placeholder:"@bhavan" %>
  </div>

  <div>
    <%= form.submit  class:"btn btn-dark"%>
  </div>
<% end %>
