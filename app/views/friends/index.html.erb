

<h1>Friends</h1>
<table class="table table table table-striped table-bordered table table-hover" >
  <thead class="thead-dark">
    <tr>
      <th>first name</th>
      <th>last name</th>
      <th>email</th>
      <th>phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>  
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.First_name %></td>
        <td><%= friend.Last_name %></td>
        <td><%= friend.Email %></td>
        <td><%= friend.Phone %></td>
        <td><%= friend.Twitter %></td> 
        <td><%= link_to "Show More", friend ,class:"btn btn-success"%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<%= link_to "ADD A FRIEND", new_friend_path, class:"btn btn-secondary"%>
